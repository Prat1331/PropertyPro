{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",             // ✅ correct root
    "outDir": "dist/server",                      // compiled files output here
    "baseUrl": ".",                          // base for path aliasing
    "paths": {
      "@shared/*": ["shared/*"]              // alias works with tsc-alias
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false                         // ✅ REQUIRED for build to work
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client", "dist", "node_modules"]
}
