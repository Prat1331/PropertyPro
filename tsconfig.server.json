{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",                         // ✅ root is the entire project
    "outDir": "./dist",                     // ✅ compile everything to dist/
    "baseUrl": ".",                         // ✅ needed for paths
    "paths": {
      "@shared/*": ["shared/*"]             // ✅ use shared path alias
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client", "dist", "node_modules"]
}
