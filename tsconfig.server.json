{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",                              // ✅ root is whole project
    "outDir": "./dist",                     // ✅ where to build server files
    "baseUrl": ".",                              // ✅ to use path aliases
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["server/**/*", "shared/**/*"],     // ✅ includes both
  "exclude": ["client", "dist", "node_modules"]  // ✅ no need to compile client
}
