{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./dist/server",
    "rootDir": ".",                      // ⬅️ Fix this line
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true
  },
  "include": ["server/**/*", "shared/**/*"]
}
