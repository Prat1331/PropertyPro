{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",                         // root includes both server and shared
    "outDir": "./dist/server",              // âœ… compiled JS goes here
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client", "dist", "node_modules"]
}
